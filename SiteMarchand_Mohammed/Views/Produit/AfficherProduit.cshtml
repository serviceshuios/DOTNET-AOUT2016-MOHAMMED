@model SiteMarchand_ME.Models.Produit
@{
    ViewBag.Title = "AfficherProduit";
}

<h2>Afficher un produit</h2>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Champ</th>
                <th>Valeur</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Categorie)</td>
                <td>@Html.DisplayFor(model => model.Categorie)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.NomProduit)</td>
                <td>@Html.DisplayFor(model => model.NomProduit)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Prix)</td>
                <td>@Html.DisplayFor(model => model.Prix)</td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Stock)</td>
                <td>@Html.DisplayFor(model => model.Stock)</td>
            </tr>

        </tbody>
    </table>
</div>